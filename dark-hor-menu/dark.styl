/* ====================================
   ------- Dark Horizontal Menu -------
   ==================================== */

$background = './images/dark-hor-menu-bg.png'
$sprite = './images/dark-hor-menu-sprite.png'
b = '.dark'

*
    padding 0
    margin 0

BODY, HTML
    width 100%
    height 100%

BODY
    background url($background) repeat

.wrapper
    padding 100px
    width 400px

.dark_2
    margin-top 75px

.dark
    display inline-block
    border 1px solid
    border-color #4c5155 #16181a #16181a #4c5155
    padding 7px
    border-radius 2px
    background linear-gradient(to bottom, #3d4246 0%, #24282b 100%)

    &__list
        list-style none
        border 1px solid #0f1014
        border-radius 2px

    &__link
        position relative
        display block
        width 100%
        height 100%
        text-decoration none
        box-shadow inset 1px 1px 0 0 rgba(255, 255, 255, 0.1)
        background linear-gradient(to bottom, #454a50 0%, #2e3136 100%)
        border-radius 2px

    &__item
        background: #383b41
        float left
        width 66px
        height 44px
        border-left 1px solid #0f1014

    &__item_active &__link
        background linear-gradient(to bottom, #313439 0%, #23272a 100%)
        box-shadow inset 0 0 6px 0 rgba(0, 0, 0, .6)
        border-radius 0

    &__item:first-child
        border-left none

    &__link:after
        left 0
        top 0
        content ''
        position absolute
        width 66px
        height 44px
        background url($sprite) no-repeat

    &__link_mail:after
        background-position 0 0

    &__link_gallery:after
        background-position -66px  0

    &__link_music:after
        background-position -132px 0

    &__link_movie:after
        background-position -198px 0

    &__link_game:after
        background-position -264px 0

    &__item_active &__link_mail:after,
    &__link_mail:active:after
        background-position 0 -44px

    &__item_active &__link_gallery:after,
    &__link_gallery:active:after
        background-position -66px  -44px

    &__item_active &__link_music:after,
    &__link_music:active:after
        background-position -132px -44px

    &__item_active &__link_movie:after,
    &__link_movie:active:after
        background-position -198px -44px
      
    &__item_active &__link_game:after,
    &__link_game:active:after
        background-position -264px -44px

    &__reverse
        {b}__link_mail:after
            background-position 0 -44px

        {b}__link_gallery:after
            background-position -66px -44px

        {b}__link_music:after
            background-position -132px -44px

        {b}__link_movie:after
            background-position -198px -44px

        {b}__link_game:after
            background-position -264px -44px

        {b}__item_active {b}__link_mail:after,
        {b}__link_mail:active:after
            background-position 0 0

        {b}__item_active {b}__link_gallery:after,
        {b}__link_gallery:active:after
            background-position -66px 0

        {b}__item_active {b}__link_music:after,
        {b}__link_music:active:after
            background-position -132px 0

        {b}__item_active {b}__link_movie:after,
        {b}__link_movie:active:after
            background-position -198px 0

        {b}__item_active {b}__link_game:after, 
        {b}__link_game:active:after
            background-position -264px 0

    &__link:active
        background linear-gradient(to bottom, #313439 0%, #23272a 100%)
        box-shadow inset 0 0 6px 0 rgba(0, 0, 0, .6)
        border-radius 0

.clearfix:before,
.clearfix:after
    display table
    content ''

.clearfix:after
    clear both

/* End | Dark Horizontal Menu */
